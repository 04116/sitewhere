<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:ig="http://www.sitewhere.com/schema/sitewhere/microservice/instance-global"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
           http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd
           http://www.sitewhere.com/schema/sitewhere/microservice/instance-global http://www.sitewhere.org/schema/sitewhere/microservice/instance-global/current/instance-global.xsd">

	<!-- Instance global configuration -->
	<ig:instance-global>

		<!-- MongoDB instance datastore -->
		<ig:mongo-datastore hostname="${datastore.host}"
			port="${datastore.port}" databaseName="${datastore.database}"
			replicaSetName="${datastore.replicaset}" />

	</ig:instance-global>

</beans>