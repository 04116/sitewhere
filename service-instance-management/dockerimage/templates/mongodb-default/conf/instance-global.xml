<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:ig="http://sitewhere.io/schema/sitewhere/microservice/instance-global"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
           http://sitewhere.io/schema/sitewhere/microservice/instance-global http://sitewhere.io/schema/sitewhere/microservice/instance-global/current/instance-global.xsd">

	<!-- Allow property placeholder substitution -->
	<context:property-placeholder />

	<!-- Instance global configuration -->
	<ig:instance-global>

		<!-- MongoDB global configuration management -->
		<ig:mongodb-configuration>

			<!-- Default configuration for MongoDB data access -->
			<ig:default-mongodb-configuration
				hostname="${datastore.host:mongodb}" port="${datastore.port:27017}"
				databaseName="${datastore.database:sitewhere}" replicaSetName="${datastore.replicaset:}" />

		</ig:mongodb-configuration>

	</ig:instance-global>

</beans>