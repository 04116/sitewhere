<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:sw="http://www.sitewhere.com/schema/sitewhere/microservice/common"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:am="http://www.sitewhere.com/schema/sitewhere/microservice/asset-management"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
           http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd
           http://www.sitewhere.com/schema/sitewhere/microservice/common http://www.sitewhere.org/schema/sitewhere/microservice/common/current/microservice-common.xsd
           http://www.sitewhere.com/schema/sitewhere/microservice/asset-management http://www.sitewhere.org/schema/sitewhere/microservice/asset-management/current/asset-management.xsd">

	<!-- Allow property placeholder substitution -->
	<context:property-placeholder />

	<!-- Asset Management Configuration -->
	<am:asset-management>

		<!-- Use default MongoDB configuration -->
		<sw:default-mongodb-datastore />

		<!-- Configure asset modules -->
		<am:asset-modules>
		</am:asset-modules>

	</am:asset-management>

</beans>